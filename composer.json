{
    "name": "phpdev-uk/slim-skeleton",
    "description": "Skeleton Slim 4 application",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Paul Waring",
            "email": "paul@phpdeveloper.org.uk",
            "homepage": "https://www.phpdev.uk"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-mysqli": "*",
        "slim/slim": "4.*",
        "slim/psr7": "^1.5",
        "filp/whoops": "^2.14",
        "twig/twig": "^3.3",
        "twig/intl-extra": "^3.3",
        "slim/twig-view": "^3.2",
        "doctrine/orm": "^2.10",
        "vlucas/phpdotenv": "^5.3",
        "php-di/php-di": "^6.3",
        "symfony/cache": "^5.3",
        "symfony/mailer": "^5.4",
        "doctrine/dbal": "^3.3",
        "doctrine/annotations": "^1.13",
        "doctrine/migrations": "^3.5",
        "slim/csrf": "^1.3",
        "slim/http": "^1.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.4",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests/"
        }
    },
    "config": {
        "platform": {
            "php": "7.4"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('.env.dist', '.env');\""
        ]
    }
}
