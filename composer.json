{
    "name": "phpdev-uk/slim-skeleton",
    "description": "Skeleton Slim 4 application",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Paul Waring",
            "email": "paul@phpdeveloper.org.uk",
            "homepage": "https://www.phpdev.uk"
        }
    ],
    "require": {
        "php": ">=8.3",
        "ext-mysqli": "*",
        "slim/slim": "4.*",
        "slim/psr7": "^1.5",
        "filp/whoops": "^2.14",
        "twig/twig": "^3.3",
        "twig/intl-extra": "^3.3",
        "slim/twig-view": "^3.2",
        "doctrine/orm": "^3",
        "vlucas/phpdotenv": "^5.3",
        "php-di/php-di": "^7",
        "symfony/cache": "^7",
        "symfony/mailer": "^7",
        "doctrine/dbal": "^4",
        "doctrine/migrations": "^3.5",
        "slim/csrf": "^1.3",
        "slim/http": "^1.3",
        "php-di/slim-bridge": "^3.4",
        "psr/http-message": "^1"
    },
    "require-dev": {
        "phpunit/phpunit": "^11",
        "phpstan/phpstan": "^1.4",
        "squizlabs/php_codesniffer": "^3.6",
        "symfony/var-dumper": "^7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "exclude-from-classmap": [
            "src/Migration"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests/"
        }
    },
    "config": {
        "platform": {
            "php": "8.3"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('.env.dist', '.env');\""
        ]
    }
}
